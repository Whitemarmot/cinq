{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "netlify/functions/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/netlify/functions/$1.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "functions": {
    "netlify/functions/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
