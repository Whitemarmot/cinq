<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/assets/icons/icon-72x72.png"/>
      <square150x150logo src="/assets/icons/icon-152x152.png"/>
      <square310x310logo src="/assets/icons/icon-384x384.png"/>
      <wide310x150logo src="/assets/icons/icon-384x384.png"/>
      <TileColor>#0a0a0b</TileColor>
    </tile>
    <badge>
      <polling-uri src="/api/badge-notifications"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="/api/push-notifications"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>